{
    "extensions": ["ts", "tsx","js","jsx"],
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "lib": ["es2019", "dom"],
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "typeRoots": ["./dist/@types", "./node_modules/@types"],
        "rootDir": "./src",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
